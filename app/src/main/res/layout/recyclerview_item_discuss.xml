<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/recyclerView_item_discuss_imageView_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:id="@+id/recyclerView_item_discuss_textView_nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="name" />

        <ImageView
            android:id="@+id/recyclerView_item_discuss_imageView_level"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/recyclerView_item_discuss_textView_replyed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorReplyedBackground"
        android:text="这个是原来的评论" />

    <LinearLayout
        android:id="@+id/recyclerView_iteM_discuss_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recyclerView_item_discuss_textView_replayContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这个是评论的内容" />
    </LinearLayout>
</LinearLayout>