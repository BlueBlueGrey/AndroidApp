<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dishfo.androidapp.fragment.AreaFragment"
    tools:layout_editor_absoluteY="81dp">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/fragment_area_linearlayout_actionbar"
        android:layout_width="0dp"
        android:layout_height="@dimen/actionbar_height"
        android:background="@color/colorAreaActionBar"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_area_fragment"
            android:textColor="?android:attr/textColorAlertDialogListItem" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:src="@mipmap/ic_fragment_area_search_2" />
    </LinearLayout>

    <com.baoyz.widget.PullRefreshLayout
        android:id="@+id/fragment_area_pullrefresh_refresh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_area_linearlayout_actionbar">

        <include layout="@layout/fragment_area_item_recommend" />
    </com.baoyz.widget.PullRefreshLayout>

</android.support.constraint.ConstraintLayout>
