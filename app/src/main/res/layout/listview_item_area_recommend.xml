<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/fragment_area_imageview_headimage"
        android:layout_width="0dp"
        android:layout_height="185dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_area_textview_content"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/fragment_area_textview_module"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="149dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/fragment_area_textview_date"
        app:layout_constraintStart_toEndOf="@+id/fragment_area_imageview_userheader"
        app:layout_constraintTop_toBottomOf="@+id/fragment_area_textview_author" />

    <TextView
        android:id="@+id/fragment_area_textview_content"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="72dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_area_textview_date"
        android:layout_width="72dp"
        android:layout_height="19dp"
        android:layout_marginStart="149dp"
        android:layout_marginTop="28dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/fragment_area_textview_author"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_area_textview_good"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/fragment_area_imageview_headimage" />

    <TextView
        android:id="@+id/fragment_area_textview_author"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/fragment_area_imageview_userheader"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_area_imageview_headimage"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/iamgeview5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/fragment_area_textview_good"
        app:layout_constraintTop_toBottomOf="@+id/fragment_area_imageview_headimage"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/fragment_area_textview_look"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/iamgeview5"
        app:layout_constraintTop_toBottomOf="@+id/fragment_area_imageview_headimage" />

    <ImageView
        android:id="@+id/fragment_area_imageview_userheader"
        android:layout_width="44dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <ImageButton
        android:id="@+id/fragment_area_imagebutton_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/fragment_area_textview_look"
        app:layout_constraintTop_toBottomOf="@+id/fragment_area_imageview_headimage"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/fragment_area_imageview_headimage" />
</android.support.constraint.ConstraintLayout>